<div class="col-md-5 user-container">
  <div class="user__title">
    <h3>User Info</h3>
  </div>
  <div class="user__info">
    <% if current_user.image.present? %>
      <%= attachment_image_tag current_user, :image, width: "100", height: "100" %>
    <% else %>
      <%= image_tag('no_image.png', width: "100", height: "100") %>      
    <% end %>
    <table class="table">
      <tr class="border-top">
        <td>name</td>
        <td><%= current_user.name%></td>
      </tr>
      <tr class="">
        <td>introduction</td>
        <td></td>
      </tr>
    </table>
    <div class="user-setting__link">
      <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
  <div class="book-form">
    <h3>New Book</h3>
    <%= form_with model: book, local: true do |form|%>
      <div class="form-group">
        <%= form.label :Title%>
        <%= form.text_field :title, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :Opinion%>
        <%= form.text_area :body, class: "form-control"%>          
      </div>
      <div class="form-group">
        <%= form.submit 'Create Book', class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>
