<div class="col-md-5 user-container">
  <div class="user__title">
    <h3>User Info</h3>
  </div>
  <div class="user__info">
    <%= image_tag('no_image.png', width: "20%") %>      
    <table class="table">
      <tr class="border-top">
        <td>name</td>
        <td><%= current_user.name%></td>
      </tr>
      <tr class="">
        <td>introduction</td>
        <td></td>
      </tr>
    </table>
    <div class="user-setting__link">
      <a href="#" class="btn btn-outline-secondary btn-block">
        <i class="fas fa-user-cog"></i>
      </a>
    </div>
  </div>
  <div class="book-form">
    <h3>New Book</h3>
    <%= form_with model: book do |form|%>
      <div class="form-group">
        <%= form.label :Title%>
        <%= form.text_field :title, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :Opinion%>
        <%= form.text_area :body, class: "form-control"%>          
      </div>
      <div class="form-group">
        <%= form.submit 'Create Book', class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>
