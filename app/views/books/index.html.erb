<div class="container home">
  <%= render 'shared/errors', book: @book%>
  <div class="row">
    <%= render 'shared/user-side-bar', book: @book%>
    <div class="col-md-7 books-contaier">
      <div class="books__title">
        <h3>Books</h3>
      </div>
      <div class="books__body">
        <table class="table">
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book|%>
            <tr>
              <td><%= attachment_image_tag book.user, :image, width: "40", height: "40" %></td>
              <td><%= link_to book_path(book) do%><%= book.title%><% end %></td>
              <td><%= book.body%></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>